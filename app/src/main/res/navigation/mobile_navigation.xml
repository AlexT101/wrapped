<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.wrapped.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_friends"
        android:name="com.example.wrapped.ui.friends.FriendsFragment"
        android:label="@string/menu_friends"
        tools:layout="@layout/fragment_friends" />

    <fragment
        android:id="@+id/nav_history"
        android:name="com.example.wrapped.ui.history.HistoryFragment"
        android:label="@string/menu_history"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/nav_connect"
        android:name="com.example.wrapped.ui.connect.ConnectFragment"
        android:label="@string/menu_connect"
        tools:layout="@layout/fragment_connect" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.wrapped.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
            android:id="@+id/nav_login"
            android:name="com.example.wrapped.ui.firebase.FirebaseFragment"
            android:label="Login"
            tools:layout="@layout/fragment_firebase" />

    <fragment
            android:id="@+id/nav_signup"
            android:name="com.example.wrapped.ui.firebase_signup.SignUpFragment"
            android:label="Sign Up"
            tools:layout="@layout/fragment_sign_up" />
</navigation>